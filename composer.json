{
    "name": "hynek/hynek-form",
    "description": "A form module for Hynek",
    "keywords": [
        "hynek",
        "laravel",
        "module"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Henric SÃ¶derlind",
            "email": "henric.soderlind@outlook.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "hynek/hynek-module-tools": "dev-main",
        "livewire/flux": "^2.2"
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "orchestra/testbench": "^7.7|^8.0|^9.0|^10.0",
        "pestphp/pest": "^1.23|^2.1|^3.1",
        "phpunit/php-code-coverage": "^9.0|^10.0|^11.0",
        "phpunit/phpunit": "^9.5.24|^10.5|^11.5",
        "spatie/pest-plugin-test-time": "^1.1|^2.2"
    },
    "autoload": {
        "psr-4": {
            "Hynek\\Form\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hynek\\Form\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest --colors=always",
        "test-coverage": "@test --coverage",
        "test-dirty": "@test --dirty --compact"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../hynek-module-tools",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
